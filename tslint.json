{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-console": false,
    "no-consecutive-blank-lines": [true, 2],
    "quotemark": [true, "single", "avoid-escape"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "max-classes-per-file": false,
    "max-line-length": [true, 120],
    "curly": [true, "ignore-same-line"],
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "object-literal-sort-keys": [true, "ignore-case"],
    "one-line": false,
    "interface-over-type-literal": false,
    "array-type": false,
    "comment-format": false,
    "eofline": true,
    "indent": [true, "spaces", 4],
    "switch-default": true,
    "adjacent-overload-signatures": true,
    "no-any": true,
    "no-magic-numbers": true,
    "no-reference": true,
    "prefer-for-of": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-empty": true,
    "no-empty-interface": false,
    "no-eval": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-misused-new": true,
    "no-object-literal-type-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-unbound-method": [true, "ignore-static"],
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "radix": false,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": true,
    "strict-type-predicates": true,
    "typeof-compare": true,
    "use-isnan": true,
    "cyclomatic-complexity": true,
    "no-require-imports": false,
    "prefer-const": true,
    "arrow-return-shorthand": [true, "multiline"],
    "binary-expression-operand-order": false,
    "class-name": true,
    "interface-name": [true, "always-prefix"],
    "newline-before-return": true,
    "new-parens": true,
    "no-irregular-whitespace": true,
    "no-parameter-properties": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "number-literal-format": true,
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "object-literal-shorthand": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "ordered-imports": [true, { "import-sources-order": "lowercase-last", "named-imports-order": "lowercase-first" } ],
    "prefer-method-signature": true,
    "prefer-switch": true,
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "member-ordering": [true, {
      "order": [
        "static-field",
        "instance-field",
        "constructor",
        "public-static-method",
        "public-instance-method",
        "protected-static-method",
        "protected-instance-method",
        "private-instance-method"
      ]
    }],
    "ban-types": [false],
    "no-namespace": false
  }
}
